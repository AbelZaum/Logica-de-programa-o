package vetores;

import javax.swing.JOptionPane;

public class produtos {

    public static void main(String[] args) {

        String[] nome = new String[5];
        float[] valores = new float[5];
        int[] qntFrutas = new int[5];

        for (int i = 0; i < 3; i++) {

            nome[i] = JOptionPane.showInputDialog("Qual o nome da fruta?");
            qntFrutas[i] = Integer.parseInt(JOptionPane.showInputDialog("Quantas frutas deseja comprar?"));
            valores[i] = Float.parseFloat(JOptionPane.showInputDialog("Qual o valor do seu produto?"));

        }
        for (int i = 0; i < 3; i++) {
      
        JOptionPane.showMessageDialog(null, "o nome da fruta: " + nome[i] + "\nQuantidade: " + qntFrutas [i] + "\nR$ " + valores [i]);
       
        }
    }
}
