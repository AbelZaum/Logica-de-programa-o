package aula_12_04;

import javax.swing.JOptionPane;

public class aumentoSalario {

    public static void main(String[] args) {

        Object[] valores = {"Serviços Gerais", "Vigia", " Recepcionista", "Vendedor"};
        Object selectedValores = JOptionPane.showInputDialog(null, "Informe seu cargo: ", "Cargo", JOptionPane.WARNING_MESSAGE, null, valores, valores[0]);
        float salario = Float.parseFloat(JOptionPane.showInputDialog("Informe seu salario: R$"));

        String codigo = (String) selectedValores;

        String novoSalario;
        novoSalario = switch (codigo) {
            case "Serviços Gerais" ->
                "Serviço Gerais R$ " + (salario + (salario * 50 / 100));

            case "Vigia" ->
                "Vigia R$ " + (salario + (salario * 30 / 100));

            case "Recepcionista " ->
                "Recepcionista R$ " + (salario + (salario * 25 / 100));

            case "Vendedor " ->
                "Vendedor R$ " + (salario + (salario * 15 / 100));

            default ->
                "Cargo inexistente";

        };

        JOptionPane.showMessageDialog(null, novoSalario);

    }
}
