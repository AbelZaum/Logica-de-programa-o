package aula_22_03;

import java.util.Scanner;
import javax.swing.JOptionPane;

public class Exercicio2Scanner {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        double saldo = 0f;
        double deposito;
        double retirada;
        double conta;
        double saque;

        System.out.printf("Seu saldo inicial é R$: %.2f \n", saldo);

        System.out.print("Quer depositar quantos?: ");
        deposito = sc.nextDouble();

        conta = saldo + deposito;

        System.out.println("Seu saldo atual é R$: " + conta);

        System.out.print("Quer sacar quantos?: ");
        retirada = sc.nextDouble();

        saque = conta - retirada;

     
           System.out.println("Seu saldo final é R$: " + saque);
     
    }

}
