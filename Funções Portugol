programa
{
	
cadeia nome
	inteiro idade

	
	funcao inicio()
	{
		
		Imprime ("BEM VINDO")

		Entrada ()
		Saida ()
		
		Imprime ("FIM DO PROGRAMA")	
	
	}
	
	funcao Imprime (cadeia texto) {
		escreva ("*** " + texto + " ***")
		
	}
	funcao Entrada () {
		escreva ("\nInforme seu nome: ")
		leia (nome)

		escreva ("\nInforme sua idade: ")
		leia (idade)		
	}
	funcao Saida () {
		escreva ("\nSeu nome é: " + nome)
		escreva ("\nSua idade é: " + idade + " anos\n")
	
	}

}

