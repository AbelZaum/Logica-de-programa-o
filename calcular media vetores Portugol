programa
{
    funcao inicio()
    {
        const inteiro TAMANHO_MAXIMO = 100
        inteiro tamanho
        cadeia nome
        real notas[TAMANHO_MAXIMO], media, soma
        logico continuar = verdadeiro
        caracter resposta
        enquanto (continuar) {
            soma = 0.0
            escreva("Digite o nome do aluno: ")
            leia(nome)
            escreva("Digite a quantidade de notas: ")
            leia(tamanho)
            para (inteiro i = 0; i < tamanho; i++) {
                escreva("Digite a nota ", i + 1, ": ")
                leia(notas[i])
                soma += notas[i]
            }
            media = soma / tamanho
            escreva("A média do aluno ", nome, " é ", media)
            escreva("\nDeseja calcular a média de outro aluno? (s/n)")
            leia(resposta)
            se (resposta == 'n') {
                continuar = falso
            }
        }
    }
}
