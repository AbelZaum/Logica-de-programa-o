package conteudorevisao;

import javax.swing.JOptionPane;

public class ConteudoRevisao {

    public static void main(String[] args) {

        String[] diasDaSemana = {"Domingo", "Segunda-feira", "Terça-feira", "Quarta-feira", "Quinta-feira", "Sexta-feira", "Sábado"};
        String saidaNumeros = JOptionPane.showInputDialog(null, "Digite um número de 1 a 7", "Dias da Semana", JOptionPane.QUESTION_MESSAGE);
        int numero = Integer.parseInt(saidaNumeros);
        String diaSemana;

        switch (numero) {
            case 1:
                diaSemana = diasDaSemana[0];
                break;

            case 2:
                diaSemana = diasDaSemana[1];
                break;

            case 3:
                diaSemana = diasDaSemana[2];
                break;
            case 4:
                diaSemana = diasDaSemana[3];
                break;
            case 5:
                diaSemana = diasDaSemana[4];
                break;
            case 6:
                diaSemana = diasDaSemana[5];
                break;
            case 7:
                diaSemana = diasDaSemana[6];
                break;
            default:
                diaSemana = "Número Inválido";
                break;
        }

        JOptionPane.showMessageDialog(null, "O dia da semana correspondente é " + diaSemana, "Dias da Semana", JOptionPane.INFORMATION_MESSAGE);

    }

}
