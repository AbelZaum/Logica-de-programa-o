
programa
{
	
	funcao inicio()
	{
    
     cadeia produto1 = "", produto2 = "", produto3 = ""
     real produtovalor1 = 0.0, valordesconto1 = 0.0, percentual1 = 0.0
     real totalcomdesconto1 = 0.0, totalcomdesconto2 = 0.0, totalcomdesconto3 = 0.0, totalprodutos = 0.0, valordesconto2 = 0.0, valordesconto3 = 0.0
     real percentual2 = 0.0, produtovalor2 = 0.0, produtovalor3 = 0.0, percentual3 = 0.0, totalgeral= 0.0
     
     
     
     
     escreva ("Informe o nome do primeiro produto: ")
     leia (produto1)

     escreva ("Qual o valor do produto escolhido R$: ")
     leia (produtovalor1)
     
     escreva ("Percentual de desconto do produto: ")
     leia (percentual1)
  
     escreva ("Deseja informar o segundo produto? (sim/nao): ")
     leia (produto2)

       se (produto2 == "sim") {
     
     escreva ("Informe o nome do segundo produto: ")
     leia (produto2)
     
     escreva ("Qual o valor do produto escolhido R$: ")
     leia (produtovalor2)
     
     escreva ("Percentual de desconto do produto: ")
     leia (percentual2) 
     
     escreva ("Deseja informar o terceiro produto?: ")
     leia (produto3) 
  
      
      se (produto3 == "sim") {
     
     escreva ("Informe o nome do terceiro produto: ")
     leia (produto3)
     
     escreva ("Qual o valor do produto escolhido R$: ")
     leia (produtovalor3)
     
     escreva ("Percentual de desconto do produto: ")
     leia (percentual3) }
     }
       

       totalprodutos = (produtovalor1 + produtovalor2 + produtovalor3)
       valordesconto1 = (produtovalor1 * percentual1) / 100
       valordesconto2 = (produtovalor1 * percentual1) / 100
       valordesconto3 = (produtovalor2 * percentual2) / 100
       totalcomdesconto1 = percentual1 + percentual2 + percentual3
       totalgeral = totalprodutos - totalcomdesconto1
       
        escreva ("\nO total da sua venda Ã©: " + totalprodutos) 
        escreva ("\nO total de descontos foi de: " + totalcomdesconto1)  
        escreva("\nO total geral foi de: " + totalgeral)
        
	
	}
}
