programa
{

	inclua biblioteca Matematica
	
	funcao inicio()
	{
		//-- VARIAVEIS E CONSTANTES
			
		caracter resposta
		
		//-- ENTRADA DE DADOS
		faca {
			limpa ()
		
			calcularMedia ()
			
			escreva ("\nDeseja continuar? (s/n) ")				
			leia (resposta)
		}enquanto (resposta == 's' ou resposta == 'S')

		escreva ("Programa Finalizado!")
		
	}
		
		funcao calcularMedia () 
		{
				
			inteiro tamanho
			cadeia nome
			real notas[99], media = 0.0, soma		
			caracter resposta

		faca {		
			soma = 0.0
			escreva ("\nDigite o nome do aluno: ")
			leia (nome)

			se (nome == "") {
				escreva ("Nome Invalido!")
			}
				
		}enquanto (nome == "")
			
		faca {
			escreva ("\nDigite a quantidade de notas: ")
			leia (tamanho)

				se (tamanho <= 0) {
				escreva ("Nota Invalida!")
			}
				
		}enquanto (tamanho <= 0)
			
			//-- PROCESSAMENTO
			para (inteiro i = 0; i < tamanho; i++) {
				escreva ("Digite a nota " , i + 1 , ": ")
				leia (notas [i])
				soma += notas[i]			
			}

			media = soma / tamanho
			
			media = Matematica.arredondar (media, 2)
			
			//-- SAIDA DE DADOS
			escreva ("A media do aluno " + nome + " Ã© " + media)
	
		}
	}
